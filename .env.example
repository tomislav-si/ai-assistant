# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b # qwen3:8b, phi4-mini
OLLAMA_EMBEDDING_MODEL=bge-m3:latest

# LLM for extractCommitments map-reduce: ollama | openai
LLM_PROVIDER=ollama
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_KEY= # required when LLM_PROVIDER=openai 

# Transcript ingestion
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TRANSCRIPTS_DIR=src/mock-data/transcripts
TRANSCRIPT_FULL=meeting-transcript.json
TRANSCRIPT_SMALL=meeting-transcript-small.json

# Enable/disable background refresh services
EMAIL_REFRESH_ENABLED=true
TRANSCRIPT_REFRESH_ENABLED=true
TRANSCRIPT_COMMITMENTS_BASIC_ENABLED=true
TRANSCRIPT_COMMITMENTS_MAP_REDUCE_ENABLED=false

# Background refresh intervals (milliseconds, default: 15 minutes each)
EMAIL_REFRESH_INTERVAL_MS=900000
TRANSCRIPT_REFRESH_INTERVAL_MS=900000
